
<% if @announcement.errors.any? %>
  <div class="alert alert-danger" id="error_explanation">
    <h2><%= pluralize(@announcement.errors.count, "error") %> prohibited this article from being saved:</h2>
    <ul>
      <% @announcement.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-7 col-sm-offset-3">
      <br>
      <h4> Publish Announcement</h4>
      <%= form_for @announcement do |f| %>
        <div class="form-group">
          <%= f.label :announcement, "Content" %>
          <%= f.text_field :content, class: 'form-control input-lg', placeholder: "Write here the content of your post" %>
        </div>
        <div class="form-group">
          <%= f.label :announcement, "Expiration date" %>
          <%= f.date_field :expiration_date, class: 'form-control input-lg ' %>
        </div>
        <div class="actions text-right">
          <%= f.submit "Post", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>